<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_16dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_16dp"
            android:background="@drawable/frankly_media" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_16dp"
            android:gravity="center"
            android:text="@string/random_dog_generator_text"
            android:textColor="@color/black"
            android:textSize="@dimen/size_18sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment_home_btn_generate_dogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_24dp"
            android:background="@color/button_color"
            android:padding="@dimen/size_8dp"
            android:text="@string/generate_dogs_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/size_22sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment_home_btn_recent_dogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_24dp"
            android:background="@color/button_color"
            android:padding="@dimen/size_8dp"
            android:text="@string/recent_dogs_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/size_22sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>